<!-- Components/Rows -->
@using Components
@using Wordle.Model

<div class="row comp">    
    @for(int i = 0; i < 5; i++)
    {
        int sqNumber = i;
        <Square @key=sqNumber @onkeydown=KeyDown/>
    }
</div>

<style scoped>
    .row {
        margin: 0 auto;
        background-color: inherit;
        width: 100%;
        height: 100%;
        color: white;
    }
</style>

@code {
    public char value { get; set; }

    private int currSq = 0;

    private char[] values = new char[30];

    private void KeyDown(KeyboardEventArgs e)
    {
        values[currSq] = Convert.ToChar(e.Key);
        currSq++;
    }
}
